    "rollup-plugin-terser": "^7.0.2",
    "run-auto": "^2.0.4",
    "run-parallel": "^1.2.0",
    "run-parallel-limit": "^1.1.0",
    "run-series": "^1.1.9",
    "secure-password": "^4.0.0",
    "send": "^0.17.1",
    "simple-concat-limit": "^2.0.3",
    "sodium-universal": "^3.0.4",
    "stripe": "^8.142.0",
    "url-parse": "^1.5.1",
    "uuid": "^8.3.2",
    "zero-fill": "^2.2.4"
  },
  "devDependencies": {
    "depcheck": "^1.4.0",
    "licensee": "^8.2.0",
    "nyc": "^15.1.0",
    "playwright": "^1.10.0",
    "simple-concat": "^1.0.1",
    "standard": "^16.0.3",
    "tap": "^15.0.1"
  },
  "tap": {
    "jobs": 1,
    "no-comments": true,
    "no-timeout": true,
    "reporter": "tap"
  },
  "scripts": {
    "precommit": "npm run lint",
    "build": "npm-run-all -p build:*",
    "build:editor": "rollup -c --silent",
    "build:credits": "creditstxt > credits.txt",
    "coverage": "nyc --reporter=lcov --reporter=text npm run test",
    "deps": "depcheck --ignore pino-papertrail",
    "fix": "standard --fix",
    "licenses": "licensee --errors-only",
    "lint": "standard",
    "prestart": "npm run build",
    "start": "./start",
    "pretest": "npm run build",
    "test": "NODE_ENV=test tap test/**/*.test.js",
    "test:unit": "NODE_ENV=test tap test/unit/*.test.js",
    "test:integration": "NODE_ENV=test tap test/integration/*.test.js"
  }
}
